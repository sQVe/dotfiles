[commit]
  gpgSign = true
  verbose = true

[core]
  editor = nvim
  pager = delta

[delta]
  features = line-numbers decorations
  syntax-theme = gruvbox-dark
  whitespace-error-style = 22 reverse
  zero-style = syntax

[delta "decorations"]
  commit-decoration-style = bold yellow box ul
  file-style = bold yellow box
  file-decoration-style = none
  hunk-header-decoration-style = magenta ul

[diff]
  algorithm = histogram
  colorMoved = default

[init]
  defaultBranch = main

[interactive]
  diffFilter = delta --color-only

[merge]
  tool = "nvim"

[mergetool]
  keepBackup = false
  prompt = false

[mergetool "nvim"]
  cmd = nvim \"$MERGED\"

[pull]
  rebase = merges

[push]
  autoSetupRemote = true
  default = simple

[rebase]
  autostash = true
  autosquash = true
  updateRefs = true

[status]
  showUntrackedFiles = all

