set selection-clipboard clipboard

# Catppuccin Latte theme (muted)
set default-bg "#eff1f5"
set default-fg "#4c4e5e"

set statusbar-bg "#dce0e8"
set statusbar-fg "#4c4e5e"

set inputbar-bg "#dce0e8"
set inputbar-fg "#4c4e5e"

set completion-bg "#bdbfc5"
set completion-fg "#4c4e5e"
set completion-group-bg "#eff1f5"
set completion-group-fg "#5858a0"
set completion-highlight-bg "#5858a0"
set completion-highlight-fg "#eff1f5"

set notification-bg "#dce0e8"
set notification-fg "#4c4e5e"
set notification-error-bg "#b82530"
set notification-error-fg "#eff1f5"
set notification-warning-bg "#806010"
set notification-warning-fg "#eff1f5"

set highlight-color "rgba(118, 120, 133, 0.5)"
set highlight-active-color "rgba(124, 50, 168, 0.5)"

set index-bg "#bdbfc5"
set index-fg "#4c4e5e"
set index-active-bg "#5858a0"
set index-active-fg "#eff1f5"

set render-loading-bg "#eff1f5"
set render-loading-fg "#4c4e5e"

set recolor-lightcolor "#eff1f5"
set recolor-darkcolor "#4c4e5e"

# Disable instant quit
unmap q

# Command mode (Swedish keyboard)
map รถ focus_inputbar ":"

# Navigation
map H goto top
map L goto bottom
map <Tab> navigate next
map <S-Tab> navigate previous

# Half-page scroll
map <C-d> scroll half-down
map <C-u> scroll half-up

# Jump history
map <C-o> jumplist backward
map <C-p> jumplist forward
