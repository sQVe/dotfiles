# Replicate xdg/ranger mime settings for applications that use mailcap.

audio/*; mpv %s; copiousoutput
image/gif; sxiv -a %s; copiousoutput
image/svg; qutebrowser %s; copiousoutput
image/*; sxiv %s; copiousoutput
text/html; w3m -I %{charset} -T text/html; copiousoutput
text/plain; nvim %s;
text/*; nvim %s;
video/*; mpv %s; copiousoutput

application/*; /usr/bin/mimeo %s; copiousoutput
