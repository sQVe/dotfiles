[advice]
  statusHints = false

[branch]
  sort = -committerdate

[blame]
  date = relative
  coloring = highlightRecent

[commit]
  gpgSign = true
  verbose = true

[core]
  editor = nvim
  pager = delta

[delta]
  features = line-numbers decorations
  syntax-theme = gruvbox-dark
  tabs = 2
  true-color = always
  whitespace-error-style = 22 reverse
  zero-style = syntax

[delta "decorations"]
  commit-decoration-style = bold yellow box ul
  file-decoration-style = none
  file-style = bold yellow box
  hunk-header-decoration-style = magenta ul

[diff]
  algorithm = histogram
  colorMoved = default

[fetch]
  prune = true

[init]
  defaultBranch = main

[interactive]
  diffFilter = delta --color-only

[merge]
  tool = "nvim"

[mergetool]
  keepBackup = false
  prompt = false

[mergetool "nvim"]
  cmd = nvim \"$MERGED\"

[pull]
  ff = only
  rebase = true

[push]
  autoSetupRemote = true
  default = simple

[rebase]
  autostash = true
  autosquash = true
  updateRefs = true

[rerere]
  enabled = true

[status]
  showUntrackedFiles = all

