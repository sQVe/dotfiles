[advice]
  statusHints = false

[branch]
  sort = -committerdate

[blame]
  date = relative
  coloring = highlightRecent

[commit]
  gpgSign = true
  verbose = true

[core]
  editor = nvim
  pager = delta

[delta]
  features = line-numbers decorations
  syntax-theme = teide-light
  tabs = 2
  true-color = always
  whitespace-error-style = 22 reverse
  zero-style = syntax
  plus-style = syntax "#b3c6cd"
  plus-emph-style = syntax "#9ab8c0"
  minus-style = syntax "#d1acbd"
  minus-emph-style = syntax "#c299ac"

[delta "decorations"]
  commit-decoration-style = bold yellow box ul
  file-decoration-style = none
  file-style = bold yellow box
  hunk-header-decoration-style = magenta ul

[fetch]
  prune = true

[init]
  defaultBranch = main

[interactive]
  diffFilter = delta --color-only

[diff]
  algorithm = histogram
  colorMoved = default
  tool = codediff

[difftool "codediff"]
	cmd = nvim \"$LOCAL\" \"$REMOTE\" +\"CodeDiff file $LOCAL $REMOTE\"

[merge]
	tool = codediff

[mergetool]
  keepBackup = false
  prompt = false

[mergetool "codediff"]
	cmd = nvim \"$MERGED\" -c \"CodeDiff merge \\\"$MERGED\\\"\"

[pull]
  ff = only
  rebase = true

[push]
  autoSetupRemote = true
  default = simple

[rebase]
  autostash = true
  autosquash = true
  updateRefs = true

[rerere]
  enabled = true

[status]
  showUntrackedFiles = all

[tag]
  gpgsign = true

