# Font
font pango:Iosevka 7

# Windows                   border    background    font      indicator
client.focused              #444444   #444444       #F8F8F2   #999999
client.unfocused            #343434   #343434       #999999   #999999
client.focused_inactive     #343434   #343434       #F8F8F2   #999999
client.urgent               #BD93F9   #BD93F9       #343434   #999999

# Workspacebar, statusbar etc
bar {
  colors {
    # Whole color settings
    background #343434
    statusline #999999
    separator  #343434

    # Type             border   background font
    focused_workspace  #444444  #444444    #50FA7B
    active_workspace   #444444  #444444    #50FA7B
    inactive_workspace #343434  #343434    #999999
    urgent_workspace   #BD93F9  #BD93F9    #343434
  }

  # Output
  output eDP1

  # i3bar position
  position top

  # Start i3status
  status_command i3blocks

  # Show systray on primary monitor always
  tray_output none

  # Mouse bindings
  bindsym button4 nop
  bindsym button5 nop

  font pango:Iosevka 7
}

