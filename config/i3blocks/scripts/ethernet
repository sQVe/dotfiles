#!/usr/bin/env bash

label="ïƒ§"
state="down"

if [ -f /sys/class/net/$BLOCK_INSTANCE/operstate ]; then
	state="$(cat /sys/class/net/$BLOCK_INSTANCE/operstate)"
fi

if [[ "$state" == "down" ]]; then
	echo "$label"
	echo "$label"
	echo "#E02760"
	exit 0
fi

speed="$(cat /sys/class/net/$BLOCK_INSTANCE/speed 2> /dev/null)"

echo "$label $speed"
echo "$label $speed"
echo "#52B5B9"
