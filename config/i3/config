# Font
font pango:Iosevka 15

# Windows                   border    background    font      indicator
client.focused              #666666   #666666       #FFFFFF   #AAAAAA
client.unfocused            #333333   #333333       #AAAAAA   #AAAAAA
client.focused_inactive     #333333   #333333       #FFFFFF   #AAAAAA
client.urgent               #EDC33D   #EDC33D       #333333   #AAAAAA

# Workspacebar, statusbar etc
bar {
  colors {
    # Whole color settings
    background #333333
    statusline #999999
    separator  #333333

    # Type             border  background font
    focused_workspace  #AAAAAA #AAAAAA    #333333
    active_workspace   #AAAAAA #AAAAAA    #333333
    inactive_workspace #333333 #333333    #AAAAAA
    urgent_workspace   #EDC33D #EDC33D    #333333
  }

  # Output
  output eDP-1

  # i3bar position
  position top

  # Start i3status
  status_command i3blocks

  # Show systray on primary monitor always
  tray_output eDP1

  # Mouse bindings
  bindsym button4 nop
  bindsym button5 nop

  font pango:Iosevka 15
}

