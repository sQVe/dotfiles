{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Work",
  "description": "Work-driven task execution configuration",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string"
    },
    "config": {
      "type": "object",
      "description": "Execution configuration",
      "properties": {
        "stuckThreshold": {
          "type": "integer",
          "default": 3,
          "description": "Failures before marking stuck"
        },
        "verify": {
          "$ref": "#/$defs/verify",
          "description": "Default verification commands and state checks"
        }
      },
      "required": ["verify"]
    },
    "context": {
      "$ref": "#/$defs/context",
      "description": "Project-wide guidance"
    },
    "tickets": {
      "type": "array",
      "description": "List of tickets to complete",
      "items": {
        "$ref": "#/$defs/ticket"
      }
    }
  },
  "required": ["config", "tickets"],
  "$defs": {
    "context": {
      "type": "object",
      "description": "Guidance for execution",
      "properties": {
        "docs": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Files to read for guidelines (CLAUDE.md, CONTRIBUTING.md, etc.)"
        },
        "files": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Paths to work in"
        },
        "notes": {
          "type": "string",
          "description": "Free-form guidance"
        },
        "reference": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Files to match patterns from"
        }
      },
      "additionalProperties": true
    },
    "task": {
      "type": "object",
      "properties": {
        "context": {
          "$ref": "#/$defs/context",
          "description": "Task-specific guidance"
        },
        "description": {
          "type": "string",
          "description": "What to accomplish"
        },
        "done": {
          "type": "boolean",
          "default": false,
          "description": "Completion status"
        },
        "steps": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Ordered sub-steps for complex tasks"
        },
        "verify": {
          "$ref": "#/$defs/verify",
          "description": "Task-specific verification (merges with ticket/config verify)"
        }
      },
      "required": ["description", "done"]
    },
    "ticket": {
      "type": "object",
      "properties": {
        "context": {
          "$ref": "#/$defs/context",
          "description": "Ticket-specific guidance"
        },
        "name": {
          "type": "string",
          "description": "Commit message / ticket name"
        },
        "tasks": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/task"
          }
        },
        "type": {
          "type": "string",
          "enum": ["chore", "docs", "feat", "fix", "perf", "refactor", "style", "test"],
          "description": "Commit type"
        },
        "verify": {
          "$ref": "#/$defs/verify",
          "description": "Ticket-specific verification (merges with config verify)"
        }
      },
      "required": ["name", "tasks", "type"]
    },
    "verify": {
      "type": "object",
      "description": "Verification commands and state checks",
      "properties": {
        "lint": {
          "type": ["string", "null"],
          "description": "Lint command"
        },
        "state": {
          "type": ["string", "null"],
          "description": "State to confirm manually"
        },
        "test": {
          "type": ["string", "null"],
          "description": "Test command"
        },
        "typecheck": {
          "type": ["string", "null"],
          "description": "Type check command"
        }
      }
    }
  }
}
