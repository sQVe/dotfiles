{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Work",
  "description": "Work-driven task execution configuration",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string"
    },
    "context": {
      "$ref": "#/$defs/context",
      "description": "Project-wide guidance"
    },
    "config": {
      "type": "object",
      "description": "Execution configuration",
      "properties": {
        "verify": {
          "type": "string",
          "description": "Command to verify task completion (e.g., lint, typecheck, test)"
        },
        "stuckThreshold": {
          "type": "integer",
          "default": 3,
          "description": "Failures before marking stuck"
        }
      },
      "required": [
        "verify"
      ]
    },
    "tickets": {
      "type": "array",
      "description": "List of tickets to complete",
      "items": {
        "$ref": "#/$defs/ticket"
      }
    }
  },
  "required": [
    "config",
    "tickets"
  ],
  "$defs": {
    "context": {
      "type": "object",
      "description": "Guidance for execution",
      "properties": {
        "files": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Paths to work in"
        },
        "reference": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Files to match patterns from"
        },
        "docs": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Files to read for guidelines (CLAUDE.md, CONTRIBUTING.md, etc.)"
        },
        "notes": {
          "type": "string",
          "description": "Free-form guidance"
        }
      },
      "additionalProperties": true
    },
    "ticket": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "feat",
            "fix",
            "test",
            "refactor",
            "chore",
            "docs",
            "style",
            "perf"
          ],
          "description": "Commit type"
        },
        "name": {
          "type": "string",
          "description": "Commit message / ticket name"
        },
        "context": {
          "$ref": "#/$defs/context",
          "description": "Ticket-specific guidance"
        },
        "tasks": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/task"
          }
        },
        "verify": {
          "type": "string",
          "description": "Ticket-specific verify command (overrides config verify)"
        }
      },
      "required": [
        "type",
        "name",
        "tasks"
      ]
    },
    "task": {
      "type": "object",
      "properties": {
        "description": {
          "type": "string",
          "description": "What to accomplish"
        },
        "steps": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Ordered sub-steps for complex tasks"
        },
        "context": {
          "$ref": "#/$defs/context",
          "description": "Task-specific guidance"
        },
        "done": {
          "type": "boolean",
          "default": false,
          "description": "Completion status"
        },
        "verify": {
          "type": "string",
          "description": "Task-specific verify command (overrides ticket/config verify)"
        }
      },
      "required": [
        "description",
        "done"
      ]
    }
  }
}
