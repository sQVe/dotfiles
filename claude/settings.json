{
  "cleanupPeriodDays": 7,
  "env": {
    "BASH_DEFAULT_TIMEOUT_MS": "30000",
    "BASH_MAX_TIMEOUT_MS": "120000",
    "DISABLE_ERROR_REPORTING": "1",
    "DISABLE_NON_ESSENTIAL_MODEL_CALLS": "1",
    "DISABLE_TELEMETRY": "1"
  },
  "includeCoAuthoredBy": false,
  "model": "sonnet",
  "permissions": {
    "allow": [
      "Bash(bat:*)",
      "Bash(biome:*)",
      "Bash(cat:*)",
      "Bash(cp:*)",
      "Bash(curl:*)",
      "Bash(delta:*)",
      "Bash(echo:*)",
      "Bash(exa:*)",
      "Bash(fd:*)",
      "Bash(find:*)",
      "Bash(fzf:*)",
      "Bash(gh api:*)",
      "Bash(gh pr:*)",
      "Bash(git add:*)",
      "Bash(git branch:*)",
      "Bash(git checkout:*)",
      "Bash(git commit:*)",
      "Bash(git config:*)",
      "Bash(git diff:*)",
      "Bash(git fetch:*)",
      "Bash(git log:*)",
      "Bash(git merge:*)",
      "Bash(git pull:*)",
      "Bash(git push:*)",
      "Bash(git remote:*)",
      "Bash(git show:*)",
      "Bash(git stash:*)",
      "Bash(git status:*)",
      "Bash(git worktree:*)",
      "Bash(go:*)",
      "Bash(grep:*)",
      "Bash(head:*)",
      "Bash(jq:*)",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      "Bash(mv:*)",
      "Bash(npm:*)",
      "Bash(npx:*)",
      "Bash(nvim:*)",
      "Bash(pnpm:*)",
      "Bash(pwd:*)",
      "Bash(rg:*)",
      "Bash(rm:*)",
      "Bash(shellcheck:*)",
      "Bash(shfmt:*)",
      "Bash(tail:*)",
      "Bash(touch:*)",
      "Bash(which:*)",
      "Edit(**)",
      "Glob(**)",
      "Grep(**)",
      "LS(**)",
      "MultiEdit(**)",
      "Read(**)",
      "Task(**)",
      "TodoRead()",
      "TodoWrite(**)",
      "WebFetch(domain:docs.anthropic.com)",
      "WebFetch(domain:gist.github.com)",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:raw.githubusercontent.com)",
      "WebSearch(**)",
      "Write(**)",
      "false",
      "mcp__linear",
      "mcp__playwright",
      "mcp__ref",
      "mcp__sentry",
      "mcp__sequential-thinking",
      "true"
    ],
    "deny": [
      "Bash(bash -i >& /dev/tcp/*)",
      "Bash(chmod -R 777 /*)",
      "Bash(curl * | bash*)",
      "Bash(curl * | sh*)",
      "Bash(curl http://169.254.169.254/*)",
      "Bash(dd if=/dev/zero of=/dev/*)",
      "Bash(fdisk*)",
      "Bash(find / -type f -delete*)",
      "Bash(git push --force*)",
      "Bash(git push -f*)",
      "Bash(git reset --hard origin/*)",
      "Bash(grep -r password /etc/*)",
      "Bash(halt*)",
      "Bash(history | grep -i password*)",
      "Bash(history | grep -i token*)",
      "Bash(mkfs*)",
      "Bash(nc -l*)",
      "Bash(netcat -l*)",
      "Bash(nmap*)",
      "Bash(poweroff*)",
      "Bash(python -c 'import socket*)",
      "Bash(reboot*)",
      "Bash(rm -rf /)",
      "Bash(rm -rf /*)",
      "Bash(rm -rf /home/*)",
      "Bash(rm -rf /var/*)",
      "Bash(shutdown*)",
      "Bash(sudo *)",
      "Bash(wget * | bash*)",
      "Bash(wget * | sh*)"
    ],
    "defaultMode": "plan"
  }
}
