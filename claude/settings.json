{
  "cleanupPeriodDays": 7,
  "env": {
    "BASH_DEFAULT_TIMEOUT_MS": "30000",
    "BASH_MAX_TIMEOUT_MS": "120000",
    "DISABLE_ERROR_REPORTING": "1",
    "DISABLE_NON_ESSENTIAL_MODEL_CALLS": "1",
    "DISABLE_TELEMETRY": "1"
  },
  "includeCoAuthoredBy": false,
  "model": "sonnet",
  "permissions": {
    "allow": [
      "Bash(cat:*)",
      "Bash(cp:*)",
      "Bash(curl:*)",
      "Bash(exa:*)",
      "Bash(fd:*)",
      "Bash(find:*)",
      "Bash(gh api:*)",
      "Bash(gh pr:*)",
      "Bash(git:*)",
      "Bash(grep:*)",
      "Bash(jq:*)",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      "Bash(mv:*)",
      "Bash(npm:*)",
      "Bash(nvim:*)",
      "Bash(biome:*)",
      "Bash(pnpm:*)",
      "Bash(rg:*)",
      "Bash(shellcheck:*)",
      "Bash(shfmt:*)",
      "Bash(touch:*)",
      "Edit",
      "mcp__context7",
      "mcp__fetch",
      "mcp__linear",
      "mcp__playwright",
      "mcp__sentry",
      "mcp__sequential-thinking"
    ],
    "deny": [],
    "defaultMode": "plan"
  }
}
