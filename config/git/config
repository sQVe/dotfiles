[commit]
  gpgSign = true

[core]
  pager = delta

[interactive]
  diffFilter = delta --color-only

[delta]
  syntax-theme = gruvbox-dark
  whitespace-error-style = 22 reverse
  features = line-numbers decorations
  line-numbers-minus-style = "#3b110c"
  line-numbers-plus-style = "#3c3d0f"
  line-numbers-zero-style = "#504945"
  minus-style = dim syntax "#3b110c"
  plus-style = syntax "#3c3d0f"
  zero-style = syntax

[delta "decorations"]
  commit-decoration-style = bold yellow box ul
  file-style = bold yellow box
  file-decoration-style = none
  hunk-header-decoration-style = magenta ul

[merge]
  conflictStyle = diff3
  tool = vim_mergetool

[mergetool "vim_mergetool"]
  cmd = nvim -f -c "MergetoolStart" "$MERGED" "$BASE" "$LOCAL" "$REMOTE"

[pull]
  rebase = merges

[push]
  default = simple

[rebase]
  autostash = true
  autosquash = true

