      "Bash(make:*)",
      "Bash(mkdir:*)",
      "Bash(mv:*)",
      "Bash(npm:*)",
      "Bash(npx:*)",
      "Bash(nvim:*)",
      "Bash(pip3:*)",
      "Bash(pip:*)",
      "Bash(pnpm:*)",
      "Bash(prettier:*)",
      "Bash(pwd:*)",
      "Bash(pytest:*)",
      "Bash(realpath:*)",
      "Bash(rg:*)",
      "Bash(rm:*)",
      "Bash(rustc:*)",
      "Bash(rustfmt:*)",
      "Bash(rustup:*)",
      "Bash(sed:*)",
      "Bash(shellcheck:*)",
      "Bash(shfmt:*)",
      "Bash(sort:*)",
      "Bash(stat:*)",
      "Bash(tail:*)",
      "Bash(task:*)",
      "Bash(touch:*)",
      "Bash(tr:*)",
      "Bash(tree:*)",
      "Bash(tsc:*)",
      "Bash(turbo:*)",
      "Bash(typst:*)",
      "Bash(uniq:*)",
      "Bash(vitest:*)",
      "Bash(wc:*)",
      "Bash(which:*)",
      "Bash(xargs:*)",
      "Bash(yarn:*)",
      "AskUserQuestion",
      "Edit(**)",
      "Glob(**)",
      "Grep(**)",
      "KillShell",
      "LS(**)",
      "MultiEdit(**)",
      "Read(**)",
      "Read(~/.bin/**)",
      "Read(~/.dotfiles/**)",
      "Read(~/.claude/**)",
      "Read(~/code/**)",
      "Read(~/download/**)",
      "Read(~/notebox/**)",
      "Read(~/scripts/**)",
      "Skill",
      "Task",
      "TodoRead",
      "TodoWrite",
      "WebFetch",
      "WebSearch",
      "Write(**)",
      "ExitPlanMode",
      "mcp__context7",
      "mcp__linear",
      "mcp__sentry",
      "Bash(ps aux:*)",
      "Bash(nvidia-smi:*)",
      "Bash(git -C ~/.dotfiles log --all --oneline --name-only -- **/google* **/chrome*)",
      "Bash(systemctl:*)",
      "WebFetch(domain:yazi-rs.github.io)"
    ],
    "defaultMode": "plan"
  },
  "model": "opus",
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node \"$HOME/.claude/hooks/gsd-check-update.js\""
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "/home/sqve/scripts/claude/statusline.sh"
  },
  "enabledPlugins": {
    "context7@claude-plugins-official": true,
    "elements-of-style@superpowers-marketplace": true,
    "frontend-design@claude-plugins-official": true,
    "gopls-lsp@claude-plugins-official": true,
    "ralph-loop@claude-plugins-official": true,
    "safety-net@cc-marketplace": true,
    "security-guidance@claude-code-plugins": true,
    "superpowers@superpowers-marketplace": true,
    "typescript-lsp@claude-plugins-official": true
  },
  "alwaysThinkingEnabled": true,
  "feedbackSurveyState": {
    "lastShownTime": 1754085535302
  }
