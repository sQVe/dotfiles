      "Bash(echo:*)",
      "Bash(env:*)",
      "Bash(eslint:*)",
      "Bash(exa:*)",
      "Bash(fd:*)",
      "Bash(file:*)",
      "Bash(find:*)",
      "Bash(fzf:*)",
      "Bash(gh:*)",
      "Bash(git:*)",
      "Bash(go:*)",
      "Bash(grep:*)",
      "Bash(grove:*)",
      "Bash(head:*)",
      "Bash(jest:*)",
      "Bash(jq:*)",
      "Bash(ls:*)",
