{
  "cleanupPeriodDays": 7,
  "env": {
    "DISABLE_ERROR_REPORTING": "1",
    "DISABLE_NON_ESSENTIAL_MODEL_CALLS": "1",
    "DISABLE_TELEMETRY": "1"
  },
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Bash(cat:*)",
      "Bash(cp:*)",
      "Bash(curl:*)",
      "Bash(exa:*)",
      "Bash(fd:*)",
      "Bash(find:*)",
      "Bash(gh api:*)",
      "Bash(gh pr:*)",
      "Bash(git:*)",
      "Bash(grep:*)",
      "Bash(jq:*)",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      "Bash(mv:*)",
      "Bash(npm:*)",
      "Bash(pnpm:*)",
      "Bash(rg:*)",
      "Bash(touch:*)",
      "Edit",
      "mcp__context7__*",
      "mcp__fetch__*",
      "mcp__linear__*",
      "mcp__playwright__*",
      "mcp__sequential-thinking__*"
    ],
    "deny": []
  }
}
